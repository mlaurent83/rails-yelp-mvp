<%= simple_form_for(@restaurant, url: restaurants_path) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: Restaurant::VALID_CATEGORIES, prompt: "Select a category" %>
  <%= f.submit %>
  <%= f.error_notification %>
<% end %>
